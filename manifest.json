{
  "name": "AddGPT",
  "description": "Extension to use ChatGPT more efficiently",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./src/popup/index.html",
    "default_title": "",
    "default_icon": {
      "16": "./logo.png",
      "32": "./logo.png",
      "48": "./logo.png",
      "128": "./logo.png"
    }
  },
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "./logo.png",
    "48": "./logo.png",
    "128": "./logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["AddGPT.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
